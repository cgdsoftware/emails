{
    "name": "Email",
    "appends": [
        "status"
    ],
    "routePrefix": "emails",
    "crtNo": true,
    "buttons": [
        {
            "icon": "eye",
            "type": "row",
            "class": "is-row-button",
            "event": "show"
        },
        "destroy", 
        {
            "icon": "pencil-alt",
            "type": "global",
            "class": "is-button",
            "event": "compose",
            "label": "Compose"
        }
    ],
    "columns": [
        {
            "label": "Subject",
            "name": "subject",
            "data": "emails.subject",
            "meta": [
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Sent at",
            "name": "sent_at",
            "data": "emails.sent_at",
            "dateFormat": "d-m-Y H:i",
            "meta": [
                "searchable",
                "sortable",
                "date"
            ]
        },
        {
            "label": "Created by",
            "name": "createdBy",
            "data": "people.name",
            "meta": [
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Created at",
            "name": "created_at",
            "data": "emails.created_at",
            "meta": [
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Schedule",
            "name": "schedule_at",
            "data": "emails.schedule_at",
            "dateFormat": "d-m-Y H:i",
            "meta": [
                "searchable",
                "sortable",
                "date"
            ]
        },
        {
            "label": "Status",
            "data": "email.status",
            "name": "status",
            "meta": [
                "slot"
            ]
        },
        {
            "label": "Priority",
            "name": "priority",
            "data": "emails.priority",
            "meta": [
                "slot",
                "searchable",
                "sortable"
            ]
        }
    ]
}