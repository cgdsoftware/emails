{
    "name": "Email",
    "routePrefix": "emails",
    "crtNo": true,
    "buttons": [
        "destroy", 
        {
            "icon": "pencil-alt",
            "type": "global",
            "class": "is-button",
            "event": "compose",
            "label": "Compose"
        }
    ],
    "columns": [
        {
            "label": "Priority",
            "name": "priority",
            "enum": "LaravelEnso\\Emails\\app\\Enums\\Priorities",
            "data": "emails.priority",
            "meta": [
                "slot",
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Subject",
            "name": "subject",
            "data": "emails.subject",
            "meta": [
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Body",
            "name": "body",
            "data": "emails.body",
            "meta": [
                "searchable",
                "sortable"
            ]
        },
        {
            "label": "Schedule",
            "name": "schedule_at",
            "data": "emails.schedule_at",
            "dateFormat": "d-m-Y H:i",
            "meta": [
                "searchable",
                "sortable",
                "date"
            ]
        },
        {
            "label": "Sent",
            "name": "sent_at",
            "data": "emails.sent_at",
            "dateFormat": "d-m-Y H:i",
            "meta": [
                "searchable",
                "sortable",
                "date"
            ]
        },
        {
            "label": "Created by",
            "name": "createdBy",
            "data": "people.name",
            "meta": [
                "searchable",
                "sortable"
            ]
        }
    ]
}